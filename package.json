{
  "name": "movie_api",
  "version": "1.0.0",
  "description": "A REST API for movies with MongoDB",
  "main": "movie_api/server.js",
  "scripts": {
    "test": "jest --detectOpenHandles --forceExit",
    "start": "node movie_api/server.js",
    "dev": "nodemon movie_api/server.js",
    "seed": "node movie_api/utils/seedDatabase.js"
  },
  "keywords": [
    "movies",
    "api",
    "express",
    "mongodb",
    "mongoose"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^2.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "movie_api"
    ]
  }
}
